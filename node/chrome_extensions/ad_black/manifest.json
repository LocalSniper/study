{
	"manifest_version": 2,
	"name": "AD Black",
	"version": "1.0.0",
	"background": { "scripts": ["background.js"] },
	"page_action": {
		"default_icon": {
			"19": "icon_19.png",
			"38": "icon_38.png"
		},
		"default_title": "AD Black", // shown in tooltip
		"default_popup": "popup.html"
	},
	"permissions" : ["tabs","http://localhost/"],
	"content_scripts":[{
		"matches":["https://www.youtube.com/*"],
		"js":["content_script.js"]
	}]
}
